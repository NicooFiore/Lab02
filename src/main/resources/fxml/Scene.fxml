<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.alien.FXMLController">
   <top>
      <Label text="Alien Translator" BorderPane.alignment="CENTER">
         <font>
            <Font name="Courier New Bold" size="39.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Testo Alieno" />
                  <TextField fx:id="txtTesto" prefHeight="26.0" prefWidth="190.0" translateX="30.0" />
                  <Button mnemonicParsing="false" onAction="#handleTraduci" text="Traduci" translateX="60.0" />
               </children>
            </HBox>
            <TextArea fx:id="txtTraduzione" prefHeight="200.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" onAction="#handleClear" text="Clear Text" translateX="300.0" />
         </children>
      </VBox>
   </center>
</BorderPane>
